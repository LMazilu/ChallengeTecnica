<%- include('partials/header', { pageTitle: 'Login' }) %>

<main class="container mx-auto mt-10 p-4">
    <section class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold mb-6 text-gray-800 text-center">Accedi a BuoniAcquisto</h1>
        <form action="/login" method="POST" class="space-y-4">
            <div>
                <label for="username" class="block text-gray-700">Email</label>
                <input type="text" id="username" name="username" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400" required>
            </div>
            <div>
                <label for="password" class="block text-gray-700">Password</label>
                <input type="password" id="password" name="password" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400" required>
            </div>
            <div>
                <button type="submit" class="w-full bg-yellow-400 text-white px-4 py-2 rounded-md hover:bg-yellow-500 transition duration-300">Accedi</button>
            </div>
        </form>
    </section>
</main>

<footer class="bg-yellow-400 text-center p-4 shadow-lg mt-10">
    <p class="text-gray-800">&copy; 2024 BuoniAcquisto. Tutti i diritti riservati.</p>
</footer>
</body>
</html>
